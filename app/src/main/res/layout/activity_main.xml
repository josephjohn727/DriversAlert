<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.driversalert.camera.CameraSourcePreview
        android:id="@+id/camera_source_preview_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.example.driversalert.camera.facedetection.GraphicOverlay
            android:id="@+id/graphic_overlay_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>

    </com.example.driversalert.camera.CameraSourcePreview>

        <Button
        android:id="@+id/btn_stop_alert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stop alert"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/myViolet"
        android:textColor="@android:color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>